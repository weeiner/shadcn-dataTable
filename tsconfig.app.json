{
  "extends": "./tsconfig.json", // Inherit settings from the root tsconfig.json
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/out-tsc", // Output directory for compiled files
    "types": [], // Types specific to this app
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/components/NewDataTable.jsx"], // Include all TypeScript files
  "exclude": ["src/**/*.spec.ts", "node_modules"] // Exclude test files and node_modules
}
